{
  "network_name": "Multi-AS-Network",
  "project_settings": {
    "output_folder": "output"
  },

  "autonomous_systems": [
    {
      "name": "AS_X",
      "asn": 65001,
      "igp": { "protocol": "RIP", "version": 2 },
      "routers": [
        { "name": "R1", "loopback": "1.1.1.1/32" },
        { "name": "R2", "loopback": "2.2.2.2/32" },
        { "name": "R3", "loopback": "3.3.3.3/32" },
        { "name": "R4", "loopback": "4.4.4.4/32" }
      ],
      "ibgp": { "type": "full-mesh", "update_source": "loopback", "send_community": true }
    },
    {
      "name": "AS_Y",
      "asn": 65002,
      "igp": { "protocol": "OSPF", "process_id": 1, "area": 0 },
      "routers": [
        { "name": "R5", "loopback": "5.5.5.5/32" },
        { "name": "R6", "loopback": "6.6.6.6/32" },
        { "name": "R7", "loopback": "7.7.7.7/32" },
        { "name": "R8", "loopback": "8.8.8.8/32" }
      ],
      "ibgp": { "type": "full-mesh", "update_source": "loopback", "send_community": true }
    }
  ],

  "links": [
    {
      "endpoints": [
        { "device": "R1", "interface": "GigabitEthernet2/0", "ip": "10.0.0.9/30" },
        { "device": "R5", "interface": "GigabitEthernet2/0", "ip": "10.0.0.10/30" }
      ]
    },
    {
      "endpoints": [
        { "device": "R2", "interface": "GigabitEthernet1/0", "ip": "10.0.0.25/30" },
        { "device": "R6", "interface": "GigabitEthernet1/0", "ip": "10.0.0.26/30" }
      ]
    }
  ],

  "bgp": {
    "communities": {
      "customer": "65001:100",
      "peer": "65001:200",
      "provider": "65001:300"
    },

    "local_preference": {
      "customer": 200,
      "peer": 150,
      "provider": 50
    },

    "propagation_policy": {
      "to_customer": ["customer", "peer", "provider"],
      "to_peer": ["customer"],
      "to_provider": ["customer"]
    },

    "ebgp_peers": [
      {
        "local_router": "R1",
        "remote_router": "R5",
        "remote_as": 65002,
        "relationship": "customer"
      },
      {
        "local_router": "R2",
        "remote_router": "R6",
        "remote_as": 65002,
        "relationship": "provider"
      }
    ]
  }
}
